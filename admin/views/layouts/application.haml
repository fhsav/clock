%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "UTF-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title
          FHS Clock &mdash; Administration
        %meta{:content => "The FHS Clock control panel.", :name => "description"}
        %meta{:content => "", :name => "author"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %link{:href => "/admin/img/favicon.ico", :rel => "shortcut icon"}
        %link{:href => "/admin/img/apple-touch-icon.png", :rel => "apple-touch-icon"}
        %link{:href => "/admin/css/gyaku.css", :rel => "stylesheet"}
        %link{:href => "/admin/css/application.css", :rel => "stylesheet"}
        %script{:src => "/admin/jsc/lib/modernizr-1.7.min.js"}
  %body
    #contain
      %header
        .black
          %hgroup.row
            %h1.sixcol
              %a{:href => url(:index)} FHS Clock
            %nav.sixcol.last
              %ul
                %li
                  %a{:href => url(:index)} General
                %li
                  %a{:href => url(:schedules, :index)} Schedules
                %li
                  %a{:href => url(:marquees, :index)} Marquees
                %li
                  %a{:href => url(:notices, :index)} Notices
        .white
          %hgroup.row
            %p
              Hello, FHS AV User
            %p.right
              %a{:href => Clock.url(:index)} View Clock &rarr;
      #main{:role => "main"}
        
        =yield
        
      %footer.row
        %p The FHS Clock is functional.
        %p Version #{CLOCK_VERSION}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
    %script{:src => "/admin/jsc/gyaku.js"}
    %script{:src => "/admin/jsc/application.js"}
    /[if lt IE 7 ]
      <script src="/admin/jsc/libs/dd_belatedpng.js"></script>
      <script> DD_belatedPNG.fix('img, .png_bg');</script>
